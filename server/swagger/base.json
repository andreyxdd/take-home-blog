{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Take Home Blog Node.js Project",
    "description": "API CRUD Documentation",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "basePath": "/",
  "tags": [
    {
      "name": "Auth",
      "description": "Endpoints to handle authorization/authentification"
    },
    {
      "name": "Blog",
      "description": "Endpoints to handle read/write/delete operation on the blog data"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/api/auth/register": {
      "post": {
        "tags": ["Auth"],
        "description": "Register a new user",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to create",
            "schema": {
              "$ref": "#/definitions/UserRegistration"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/UserResponse"
            }
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": ["Auth"],
        "description": "Login an existing user",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User to be loged-in",
            "schema": {
              "$ref": "#/definitions/UserLogin"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "User is logged-in",
            "schema": {
              "$ref": "#/definitions/UserResponse"
            }
          }
        }
      }
    },
    "/api/auth/logout": {
      "post": {
        "tags": ["Auth"],
        "description": "Logout an existing user",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "User is logged-out"
          }
        }
      }
    },
    "/api/auth/refresh-tokens": {
      "patch": {
        "tags": ["Auth"],
        "description": "Issue new access and refresh tokens",
        "produces": ["application/json"]
      }
    },
    "/api/blog/posts": {
      "get": {
        "tags": ["Blog"],
        "description": "Get posts (with pagination)",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page nunmber"
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Pagination limit"
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Portion of 20 posts",
            "schema": {
              "$ref": "#/definitions/Posts"
            }
          }
        }
      },
      "post": {
        "tags": ["Blog"],
        "description": "Add a new post",
        "parameters": [
          {
            "name": "Post a new post",
            "in": "body",
            "description": "Data from a new post",
            "schema": {
              "$ref": "#/definitions/PostPut"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "A newly created post",
            "schema": {
              "$ref": "#/definitions/PostResponse"
            }
          }
        }
      }
    },
    "/api/blog/post/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "Id of the post to create/update",
          "type": "integer"
        }
      ],
      "put": {
        "summary": "Update post with the given id",
        "tags": ["Blog"],
        "parameters": [
          {
            "name": "post",
            "in": "body",
            "description": "A new or updated post",
            "schema": {
              "$ref": "#/definitions/PostPut"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User is updated",
            "schema": {
              "$ref": "#/definitions/PostResponse"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "UserRegistration": {
      "required": ["email", "password", "name"],
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "UserLogin": {
      "required": ["email", "password"],
      "properties": {
        "email": {
          "type": "string",
          "default": "alice@test.com"
        },
        "password": {
          "type": "string",
          "default": "qwerty123"
        }
      }
    },
    "UserResponse": {
      "required": ["email", "password"],
      "properties": {
        "email": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "PostsGet": {
      "required": ["page", "limit"],
      "properties": {
        "page": {
          "type": "number"
        },
        "limit": {
          "type": "number"
        }
      }
    },
    "PostPut": {
      "required": ["title", "content"],
      "properties": {
        "title": {
          "type": "string"
        },
        "content": {
          "type": "string"
        }
      }
    },
    "PostResponse": {
      "required": ["title", "content", "updatedAt"],
      "properties": {
        "title": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string"
        }
      }
    },
    "Posts": {
      "type": "array",
      "$ref": "#/definitions/PostResponse"
    }
  }
}