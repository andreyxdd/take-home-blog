{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Take Home Blog Node.js Project",
    "description": "API CRUD Documentation",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "basePath": "/",
  "tags": [
    {
      "name": "Auth",
      "description": "Endpoints to handle authorization/authentification"
    },
    {
      "name": "Blog",
      "description": "Endpoints to handle read/write/delete operation on the blog data"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/api/auth/register": {
      "post": {
        "tags": ["Auth"],
        "description": "Register a new user",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to create",
            "schema": {
              "$ref": "#/definitions/UserRegistration"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/UserResponse"
            }
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": ["Auth"],
        "description": "Login an existing user",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User to be loged-in",
            "schema": {
              "$ref": "#/definitions/UserLogin"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "User is logged-in",
            "schema": {
              "$ref": "#/definitions/UserResponse"
            }
          }
        }
      }
    },
    "/api/auth/logout": {
      "post": {
        "tags": ["Auth"],
        "description": "Logout an existing user",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "User is logged-out"
          }
        }
      }
    },
    "/api/auth/refresh-tokens": {
      "patch": {
        "tags": ["Auth"],
        "description": "Issue new access and refresh tokens",
        "produces": ["application/json"]
      }
    },
    "/posts": {
      "get": {
        "tags": ["Blog"],
        "description": "Get posts (with pagination)",
        "produces": ["application/json"]
      },
      "put": {
        "tags": ["Blog"],
        "description": "Add a new post or update existing one",
        "produces": ["application/json"]
      },
      "delete":{
        "tags": ["Blog"],
        "description": "Delete an existing post",
        "produces": ["application/json"]
      }
    }
  },
  "definitions": {
    "UserRegistration": {
      "required": ["email", "password", "name"],
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "UserLogin": {
      "required": ["email", "password"],
      "properties": {
        "email": {
          "type": "string",
          "default": "alice@prisma.io"
        },
        "password": {
          "type": "string",
          "default": "qwerty123"
        }
      }
    },
    "UserResponse": {
      "required": ["email", "password"],
      "properties": {
        "email": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      }
    }
  }
}