{
  "/api/auth/user": {
    "get": {
      "tags": ["Auth"],
      "description": "Get user data (if authorized)",
      "produces": ["application/json"],
      "responses": {
        "200": {
          "description": "User data",
          "schema": {
            "$ref": "#/definitions/UserResponse"
          }
        }
      }
    }
  },
  "/api/auth/register": {
    "post": {
      "tags": ["Auth"],
      "description": "Register a new user",
      "parameters": [
        {
          "name": "User",
          "in": "body",
          "description": "New user credentials",
          "schema": {
            "$ref": "#/definitions/UserRegistration"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "OK",
          "schema": {
            "$ref": "#/definitions/UserResponse"
          }
        }
      }
    }
  },
  "/api/auth/login": {
    "post": {
      "tags": ["Auth"],
      "description": "Login an existing user",
      "parameters": [
        {
          "name": "User",
          "in": "body",
          "description": "Existing user credentials",
          "schema": {
            "$ref": "#/definitions/UserLogin"
          }
        }
      ],
      "produces": ["application/json"],
      "responses": {
        "200": {
          "description": "User is logged-in",
          "schema": {
            "$ref": "#/definitions/UserResponse"
          }
        }
      }
    }
  },
  "/api/auth/logout": {
    "post": {
      "tags": ["Auth"],
      "description": "Logout an existing user",
      "produces": ["application/json"],
      "responses": {
        "200": {
          "description": "Success"
        }
      }
    }
  },
  "/api/auth/refresh-tokens": {
    "patch": {
      "tags": ["Auth"],
      "description": "Issue new access and refresh tokens",
      "produces": ["application/json"]
    }
  },

  "/api/blog/posts": {
    "get": {
      "tags": ["Blog"],
      "description": "Get posts (with pagination)",
      "parameters": [
        {
          "name": "page",
          "in": "query",
          "description": "Page nunmber"
        },
        {
          "name": "limit",
          "in": "query",
          "description": "Pagination limit"
        }
      ],
      "produces": ["application/json"],
      "responses": {
        "200": {
          "description": "List of posts as pre pagination settings",
          "schema": {
            "$ref": "#/definitions/PostsResponse"
          }
        }
      }
    },
    "post": {
      "tags": ["Blog"],
      "description": "Add a new post",
      "parameters": [
        {
          "name": "Post",
          "in": "body",
          "description": "Title and content of a new post",
          "schema": {
            "$ref": "#/definitions/PostAddUpdate"
          }
        }
      ],
      "produces": ["application/json"],
      "responses": {
        "200": {
          "description": "Success"
        }
      }
    }
  },
  "/api/blog/post": {
    "parameters": [
      {
        "name": "id",
        "in": "query",
        "required": true,
        "description": "Id of the post to update/delete",
        "type": "integer"
      }
    ],
    "patch": {
      "summary": "Update the post with the given id",
      "tags": ["Blog"],
      "parameters": [
        {
          "name": "Patch",
          "in": "body",
          "description": "A new or updated post",
          "schema": {
            "$ref": "#/definitions/PostAddUpdate"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Success"
        }
      }
    },
    "delete": {
      "summary": "Delete the post with the given id",
      "tags": ["Blog"],
      "responses": {
        "200": {
          "description": "Success"
        }
      }
    }
  }
}